@model IEnumerable<InsuranceAgent.Models.Family>

@{
    ViewBag.Title = "Family";
}

<h2>Family</h2>

<div style="width:98%; text-align:right; padding-right:5px;">    
    <a href='Family/Create'><img src="@Url.Content("~/Images/add.png")" alt="add" title="add new family..." style="border: solid 0px #ffffff;"/></a>  
</div>

<table class="tblList" style="width:100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FamilyID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FamilyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Area)
        </th>
        <th>
            Members
        </th>        
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FamilyID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FamilyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customers.Count)
        </td>        
        <td>
            <a href='Family/Details/@item.FamilyID'><img src="@Url.Content("~/Images/details.png")" alt="details" title="details..." style="border: solid 0px #ffffff;"/></a>
            <a href='Family/Edit/@item.FamilyID'><img src="@Url.Content("~/Images/edit.png")" alt="edit" title="edit..." style="border: solid 0px #ffffff;"/></a>
			<a href='Family/Delete/@item.FamilyID'><img src="@Url.Content("~/Images/delete.png")" alt="delete" title="delete..." style="border: solid 0px #ffffff;"/></a>
        </td>
    </tr>
}

</table>
