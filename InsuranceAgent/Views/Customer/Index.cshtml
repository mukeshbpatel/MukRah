@model IEnumerable<InsuranceAgent.Models.Customer>

@{
    ViewBag.Title = "Family";
}

<h2>Family</h2>

<div style="width:98%; text-align:right; padding-right:5px;">    
    <a href='Customer/Create'><img src="@Url.Content("~/Images/add.png")" alt="add" title="add new customer..." style="border: solid 0px #ffffff;"/></a>  
</div>
<table class="tblList" style="width:100%">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family.FamilyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryMobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Family.FamilyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryMobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>        
        <td>
            <a href='Customer/Details/@item.CustomerID'><img src="@Url.Content("~/Images/details.png")" alt="details" title="details..." style="border: solid 0px #ffffff;"/></a>
            <a href='Customer/Edit/@item.CustomerID'><img src="@Url.Content("~/Images/edit.png")" alt="edit" title="edit..." style="border: solid 0px #ffffff;"/></a>
			<a href='Customer/Delete/@item.CustomerID'><img src="@Url.Content("~/Images/delete.png")" alt="delete" title="delete..." style="border: solid 0px #ffffff;"/></a>
        </td>
    </tr>
}

</table>
